{% extends "layout.njk" %}
{# 首页自定义样式文件 #}
{% block stylesheets %}
<link rel="stylesheet" href="css/index.css">
{% endblock %}

{% block content %}
<h1>{{ title }}</h1>
<div class="container">
  <div id="map" style="min-width:600px; min-height:600px"></div>
  <div id="formbox">
    <form action="/api" method="post" enctype="multipart/form-data" id="form">

      <p id="troubleBox">
        <label for="upImage">上传图片：</label>
        <input id="upImage" type="file" accept="image/*" name="upImage" />
      </p>

      <p>
        <label for="location">定位点：</label>
        <input type="text" name="location" id="troubleLocation"></input>
      </p>

      <p>
        <label for="select">定位点：</label>
        <select id="department">
          <option>选择单位</option>
        </select>
        <select id="workshop">
          <option>选择厂房</option>
        </select>
        <select>
          <option>选择区域</option>
        </select>
      </p>

      <p>
        <label for="description">问题描述：</label>
        <input type="text" name="description" id="troubleDescription">
      </p>
      <p>
        <label for="status">是否整改</label>
        <select name="status" id="status">
          <option value="false">待整改</option>
          <option value="true">已整改</option>
        </select>
      </p>

      <p id="reformBox">
        <label for="upReform">整改上传：</label>
        <input id="upReform" type="file" accept="image/*" name="upReform" />
      </p>

      <p>
        <label for="datetime">拍摄时间：</label>
        <input type="date" name="dateInput" id="dateInput">
        <input type="time" name="dateInput" id="timeInput">
      </p>

      <p>
        <input type="submit" value="提交">
      </p>
    </form>
  </div>
</div>
<script src="vendors/exif.js"></script>
<script src="js/index.js"></script>
{% endblock %}