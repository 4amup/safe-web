{# 先在前端实现数据格式，在做这个超级管理员页面 #}
{% extends "layout.njk" %}
{# 首页自定义样式文件 #}
{% block cssFiles %}
<link rel="stylesheet" href="css/admin.css">
{% endblock %}
{% block jsFiles %}
<script src="http://webapi.amap.com/maps?v=1.4.1&key=c5da74a5a86f1b5b119e5dd939bf49d0&plugin=AMap.PolyEditor,AMap.MouseTool"></script>
{% endblock %}

{% block content %}
<h2>{{ title }}</h2>
<div class="container">
  <div class="companyBox">
    <h3 class="companyShow">
      {% if company %}
      <span>{{ company.name }}</span>
      <span>{{ company.info }}</span>
      <a href="">edit</a>
      <a href="">del</a>
      <form action="api/company/{{company.id}}">
          <span>
            <label for="">公司名称：</label>
            <input type="text">
          </span>
          <span>
            <label for="">公司简介：</label>
            <input type="text">
          </span>
          <span><input type="submit" value="修改"></span>
        </form>
      {% else %}
      <form action="api/company">
        <span>
          <label for="">公司名称：</label>
          <input type="text">
        </span>
        <span>
          <label for="">公司简介：</label>
          <input type="text">
        </span>
        <span><input type="submit" value="提交"></span>
      </form>
      {% endif %}
    </h3>
    <div class="departmentBox">
      <form action="">
        <span>
          <label for="">单位名称：</label>
          <input type="text">
        </span>
        <span>
          <label for="">单位简介：</label>
          <input type="text">
        </span>
        <span><input type="submit" value="提交"></span>
      </form>

      {% for department in departments}
      <h4 class="departmentShow">
        <span></span>
        <span></span>
        <a href="">edit</a>
        <a href="">del</a>
      </h4>
      {% endfor %}
        <div class="areaBox">
          <form action="">
            <span>
              <label for="">厂房名称：</label>
              <input type="text">
            </span>
            <span>
              <label for="">厂房介绍：</label>
              <input type="text">
            </span>
            <span><input type="submit" value="提交"></span>
          </form>
          {% for area in areas}
          <h5 class="areaShow">
          <span></span>
          <span></span>
          <a href="">edit</a>
          <a href="">del</a>
          {% endfor %}
        </h5>
      </div>
    </div>
  </div>
  <div class="mapBox"></div>
</div>
<script src="js/admin.js"></script>
{% endblock %}